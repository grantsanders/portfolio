    @model IEnumerable<portfolio.Models.ProjectModel>

@{
    ViewData["Title"] = "listProjects";
}
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" />
</head>

    
<body>
    <h1>my recent work:</h1>

    <div class="carousel">


@foreach (var item in Model) {
            <div class="card text-white bg-dark mb-3" style="width: 25rem;">
        <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.Image)" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                <a href="@Html.DisplayFor(modelItem => item.Url)" class="btn btn-outline-secondary text-white">Source on GitHub</a>
        </div>
    </div>
} </div>

</body>